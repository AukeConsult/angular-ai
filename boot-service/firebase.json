{
  "emulators": {
    "functions": {"port": 5001},
    "firestore": {"port": 5002},
    "storage": {"port": 9199},
    "ui": {"enabled": true},
    "singleProjectMode": true
  },
  "firestore": {
    "database": "(default)",
    "location": "europe-north2",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "./node_modules",
        "**/node_modules/**",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build:prod"
      ]
    }
  ],
  "storage": {"rules": "storage.rules"}
}
